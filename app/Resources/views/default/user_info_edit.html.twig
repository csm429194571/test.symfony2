{% extends 'base.html.twig' %}
{% block body %}
<section class="content">
        <div class="row" style="position:relative;left:25%">
          <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <span class="box-title  button button2">编辑用户信息</span>
                    <span>
                      <a class="button button2" href="{{ path('userinfo_list') }}"> 返回用户信息列表页 </a>
                    </span>
                </div>
                <p></p>
                <!-- form start -->
                <form role="form" method="post" style="color:#4CAF50;" action="{{ path('user_edit',{'user_id':user_info.id}) }}">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="user_name">*账　&nbsp;&nbsp;号:</label>
                      <input type="text" class="form-control" id="user_name" placeholder="登录账号" name="username" value="{{ user_info.username }}" disabled>
                    </div>
                    <div class="form-group">
                      <label for="email">*　email:</label>
                      <input type="email" class="form-control" id="email" placeholder="请输入电子邮箱" name="email" value="{{ user_info.email }}">
                    </div>
                    <div class="form-group">
                      <label for="sex">性　　别:</label>
                      <div class="radio show_in_line">
                        <label>
                          <input type="radio" name="sex" id="optionsRadios1" value="男" {% if user_info.sex == 1 %} checked{% endif %}>
                          男
                        </label>
                      </div>
                      <div class="radio show_in_line">
                        <label>
                          <input type="radio" name="sex" id="optionsRadios2" value="女" {% if user_info.sex == 2 %} checked{% endif %}>
                          女
                        </label>
                      </div>
                      <div class="radio show_in_line">
                        <label>
                          <input type="radio" name="sex" id="optionsRadios3" value="保密" {% if user_info.sex == 0 %} checked{% endif %}>
                          保密
                        </label>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="phone">移动电话:</label>
                      <input type="text" class="form-control" id="phone" placeholder="移动电话" name="mobile" value="{{ user_info.mobile }}">
                    </div>

                    <div class="form-group">
                      <label for="qq">　　&nbsp;QQ:</label>
                      <input type="text" class="form-control" id="qq" placeholder="QQ" name="qq" value="{{ user_info.qq }}">
                    </div>
                    <div class="form-group">
                      <label for="sex">　管理员:</label>
                      <div class="radio show_in_line">
                        <label>
                          <input type="radio" name="user_type" id="optionsRadios1" value="1" {% if user_info.user_type == 1 %} checked{% endif %}>
                          是
                        </label>
                      </div>
                      <div class="radio show_in_line">
                        <label>
                          <input type="radio" name="user_type" id="optionsRadios2" value="0" {% if user_info.user_type == 0 %} checked{% endif %}>
                          否
                        </label>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="sex">状　　态:</label>
                      <div class="radio show_in_line">
                        <label>
                          <input type="radio" name="is_effect" id="optionsRadios1" value="1" {% if user_info.is_effect == 1 %} checked{% endif %}>
                          有效
                        </label>
                      </div>
                      <div class="radio show_in_line">
                        <label>
                          <input type="radio" name="is_effect" id="optionsRadios2" value="0" {% if user_info.is_effect == 0 %} checked{% endif %}>
                          无效
                        </label>
                      </div>
                    </div>
                  </div>
                  <div class="box-footer">
                    <button type="submit" class="btn btn-primary button button2" style="width:120px;height:50px;" id="user_edit">保存</button>
                  </div>
                </form>
            </div>
    </section>
  </div>
{% endblock %}
{% block stylesheets %}
    <style>
       .radio.show_in_line{display: inline}
        input.form-control.input_in_line{display: inline;width: 30%;margin-left: 50px;}
        
        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
        }

        .button1 {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        }

        .button2:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }
        table{border:1px solid gray;}
        table th{color:#4CAF50;width:8%;text-align: center;}
        table tr td{width:8%;text-align: center;}
    
    </style>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('plugins/jQuery/jQuery-2.2.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('plugins/fastclick/fastclick.js') }}"></script>
    <script type="text/javascript" src="{{ asset('dist/js/app.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('dist/js/demo.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/form.js') }}"></script>
{% endblock %}
